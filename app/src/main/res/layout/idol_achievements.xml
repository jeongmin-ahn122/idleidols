<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".Achievements">

    <fragment
        android:id="@+id/header"
        android:name="com.example.myapplication.HeaderFragment"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/Achievement1"
        android:layout_width="366dp"
        android:layout_height="133dp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="95dp"
        android:onClick="ClaimAgencyAchievement"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/activity_card" />

    <ImageView
        android:id="@+id/imageView12"
        android:layout_width="366dp"
        android:layout_height="133dp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="216dp"
        android:onClick="ClaimNumberOfIdols"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/activity_card" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="306dp"
        android:layout_height="21dp"
        android:layout_marginStart="32dp"
        android:layout_marginLeft="32dp"
        android:layout_marginTop="236dp"
        android:text="Starting the Garden"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="225dp"
        android:layout_height="21dp"
        android:layout_marginStart="116dp"
        android:layout_marginLeft="116dp"
        android:layout_marginTop="148dp"
        android:text="Create an Agency"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="225dp"
        android:layout_height="21dp"
        android:layout_marginStart="116dp"
        android:layout_marginLeft="116dp"
        android:layout_marginTop="268dp"
        android:text="Earn a total of 5 seed tokens"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="225dp"
        android:layout_height="21dp"
        android:layout_marginStart="116dp"
        android:layout_marginLeft="116dp"
        android:layout_marginTop="176dp"
        android:text="Reward: Seed Tokens x5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="225dp"
        android:layout_height="21dp"
        android:layout_marginStart="116dp"
        android:layout_marginLeft="116dp"
        android:layout_marginTop="296dp"
        android:text="Reward: Seed Tokens x5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />



    <ImageView
        android:id="@+id/imageView"
        android:layout_width="73dp"
        android:layout_height="70dp"
        android:layout_marginStart="32dp"
        android:layout_marginLeft="32dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2"
        app:srcCompat="@drawable/achieve_locked" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="306dp"
        android:layout_height="21dp"
        android:layout_marginStart="32dp"
        android:layout_marginLeft="32dp"
        android:layout_marginTop="116dp"
        android:text="You Made One!"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView9"
        android:layout_width="73dp"
        android:layout_height="70dp"
        android:layout_marginStart="32dp"
        android:layout_marginLeft="32dp"
        android:layout_marginTop="116dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2"
        app:srcCompat="@drawable/achieve_unlocked" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="30dp"
        android:layout_height="587dp"
        android:layout_marginBottom="28dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:srcCompat="@drawable/scrollbar" />

    <Button
        android:id="@+id/home_button4"
        android:layout_width="68dp"
        android:layout_height="47dp"
        android:text="Home"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/academies_button4"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/academies_button4"
        android:layout_width="68dp"
        android:layout_height="47dp"
        android:text="Academies"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/workplace_button4"
        app:layout_constraintStart_toEndOf="@+id/home_button4" />

    <Button
        android:id="@+id/workplace_button4"
        android:layout_width="68dp"
        android:layout_height="47dp"
        android:text="Workplace"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/scout_button4"
        app:layout_constraintStart_toEndOf="@+id/academies_button4" />

    <Button
        android:id="@+id/scout_button4"
        android:layout_width="68dp"
        android:layout_height="47dp"
        android:text="Scout"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/management_button4"
        app:layout_constraintStart_toEndOf="@+id/workplace_button4" />

    <Button
        android:id="@+id/management_button4"
        android:layout_width="68dp"
        android:layout_height="47dp"
        android:text="Management"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/achievements_button4"
        app:layout_constraintStart_toEndOf="@+id/scout_button4" />

    <Button
        android:id="@+id/achievements_button4"
        android:layout_width="68dp"
        android:layout_height="47dp"
        android:text="Achievements"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/management_button4" />

</androidx.constraintlayout.widget.ConstraintLayout>